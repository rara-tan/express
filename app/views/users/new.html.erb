<div class="text-center">
  <h1>ユーザ登録</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: "form-control", placeholder: "名前を入力" %>
      </div>
      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: "form-control", placeholder: "メールアドレスを入力" %>
      </div>
      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: "form-control", placeholder: "パスワードを入力" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, 'パスワード確認' %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "確認用パスワードを入力" %>
      </div>
      <%= f.submit '新規登録', class: "btn btn-lg btn-primary btn-block" %>
    <% end %>
  </div>
</div>