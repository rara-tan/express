<% if logged_in? %>
  <div class="row">
    <aside class="col-xs-4">
      <%= form_for(@tweet) do |f| %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 5, placeholder: "今日は..." %>
        </div>
        <div class="text-right">
          <%= f.submit 'ツイートする', class: "btn btn-primary" %>
        </div>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'tweets/tweets', tweets: @tweets %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Expressへようこそ！</h1>
      <p>...</p>
      <%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>

